@import "bootstrap-sprockets";
@import "bootstrap";


body {
  height: 100vh;
  background-image: url(lop.jpg);
  background-repeat:no-repeat;
  background-size:cover;
  color: #E6E3E3;
}

.links-table {
  background-color:rgba(0, 0, 0, 0.8);
  font-size: 1.5em;
}

.jumbotron {
  background-color:rgba(0, 0, 0, 0.5);
}

 #edit-btns input a {
  width: 30%;
  border-color: white;
  border-radius: 20%;
}

#edit-btns a {
  margin-left: 10px;
}

.greeting {
  margin-top: 200px;
}

.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    font-size: 25px;
    color: #818181;
    display: block;
    transition: 0.3s;
}

.sidenav a:hover {
    color: #f1f1f1;
}

.sidenav .closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 36px;
    margin-left: 50px;
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}


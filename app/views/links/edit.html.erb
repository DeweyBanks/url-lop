<div id="main-container" class="container-fluid">
  <div class="row-fluid">
    <div class="row greeting">
      <div class="col-md-6 col-md-offset-3">
        <h1>Editing Link</h1>
        <%= form_for(@link) do |f| %>
          <% if @link.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

              <ul>
              <% @link.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.text_field :given_url, :placeholder => "Paste a link to shorten", :class => "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :title, :placeholder => "Add A title for your link", :class => "form-control" %>
          </div>
          <div id="edit-btns">
            <%= f.submit "Save", :class => "btn btn-success" %>
            <%= link_to 'Show', @link, :class => "btn btn-info" %>
            <%= link_to 'Cancel', links_path, :class => "btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

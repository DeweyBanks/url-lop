
<%= link_to 'New Link', new_link_path %>

<div id="main-container" class="container-fluid">
  <div class="row-fluid">
    <div class="row greeting">
      <div class="col-md-8 col-md-offset-2 links-table ">
        <p id="notice"><%= notice %></p>

        <h1>The Links</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Given url</th>
              <th><%= sortable "slug" %></th>
              <th><%= sortable "clicks" %></th>
              <th><%= sortable "title" %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @links.each do |link| %>
              <tr>
                <td><%= link_to link.given_url, link.sanitized_url %></td>
                <td><%= link.slug %></td>
                <td><%= link.clicks %></td>
                <td><%= link.title %></td>
                <td><%= link_to 'Show', link_path(:id => link.id) %></td>
                <td><%= link_to 'Edit', edit_link_path(link) %></td>
                <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
          <nav aria-label="Page navigation">
            <% if @links.any? %>
              <%= will_paginate @links, renderer: BootstrapPagination::Rails  %>
            <% else %>
              <p class="empty">No links yet.</p>
            <% end %>
          </nav>
      </div>
    </div>
  </div>
</div>

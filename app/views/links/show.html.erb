<%= link_to 'Back', root_path %>
<div id="main-container" class="container-fluid">
  <div class="row-fluid">
    <div class="row greeting">
      <div class="col-md-6 col-md-offset-3">
        <p id="notice"><%= notice %></p>

        <h1><%= @link.title %></h1>
        <p>Shortened URL: <%= link_to @link.display_slug, @link.display_slug, target: '_blank' %></p>
        <ul>
          <li>Number of hits: <span class="badge"><%= @link.clicks %></span></li>
        </ul>
        <p class="long_url">Original URL: <%= link_to @link.given_url, @link.given_url %></p>
      </div>
    </div>
  </div>
</div>

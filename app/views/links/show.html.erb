<div id="main-container" class="container-fluid">
  <div class="row-fluid">
    <div class="row greeting">
      <div class="col-md-6 col-md-offset-3 links-table">
        <p id="notice"><%= notice %></p>

        <h1><%= @link.title %></h1>
        <p>Shortened URL: <%= link_to @link.full_slug_url, @link.full_slug_url, target: '_blank' %></p>
        <p>Number of hits: <span class="badge"><%= @link.clicks %></span></p>
        <p class="long_url">Original URL: <%= link_to @link.given_url, @link.given_url %></p>
        <%= link_to 'Back', links_path %>
      </div>
    </div>
  </div>
</div>
